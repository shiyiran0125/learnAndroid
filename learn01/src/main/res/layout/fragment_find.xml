    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xml文件内容如下"
        app:layout_constraintTop_toBottomOf="@id/info_head"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/xmlDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="111111111111111111111111"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@drawable/code_textview"
        android:singleLine="false"
        app:layout_constraintTop_toBottomOf="@id/tip1"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解析的内容如下"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/xmlDoc"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/objDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="222222222222222222222222"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@drawable/code_textview"
        app:layout_constraintTop_toBottomOf="@id/tip2"
        app:layout_constraintLeft_toLeftOf="parent"/>
